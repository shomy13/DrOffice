<Window x:Class="Ordination.View.User.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Doctor" Height="750" Width="1333" WindowStartupLocation="CenterScreen" Background="AliceBlue"
        >
    <Window.Resources>
        <ResourceDictionary Source="UserViewResources.xaml"/>
    </Window.Resources>
    
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" KeyboardNavigation.TabNavigation="None">
            <Menu KeyboardNavigation.TabNavigation="Cycle" FontSize="14" Background="AliceBlue" Foreground="Blue">
                <MenuItem Header="_Patient">
                    <MenuItem Header="Add _new patient" Command="{Binding AddNewPatient}"/>
                    <MenuItem Header="_List of patients" Command="{Binding ReturnAllPatients}"/>
                </MenuItem>
                <MenuItem Header="_Doctor">
                    <MenuItem Header ="_Profile">
                       <MenuItem Header="_View" Command="{Binding ReturnDoctor}"/>
                        <MenuItem Header="Log_Out" Command="{Binding LogOutCommand}"/>
                        <MenuItem Header="Log_In" Command="{Binding LogInCommand}"/>
                    </MenuItem>
                    <MenuItem Header="_Change">
                        <MenuItem Header="_Password" Command="{Binding ChangePassword}"/>
                    </MenuItem>
                    <MenuItem Header="_Add" Command="{Binding AddNewDoctor}"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Width="Auto" 
                    Grid.Column="0" 
                   Style="{StaticResource BorderStyle}"
                    >
                <StackPanel Margin="5,10">
                    <Button Width="120"  Style="{StaticResource ButtonStyle}" Command="{Binding ReturnAllPatients}">
                        <TextBlock>List of<LineBreak/>patients</TextBlock>
                    </Button>
                    <Button Width="120"  Style="{StaticResource ButtonStyle}" Command="{Binding AddNewPatient}">
                        <TextBlock>Add new<LineBreak/>patient</TextBlock>
                    </Button>
                    <Button Width="120"  Style="{StaticResource ButtonStyle}" Command="{Binding ReturnAllAppointments}">
                        <TextBlock>List of all<LineBreak/>appointments</TextBlock>
                    </Button>
                    
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Width="Auto" Style="{StaticResource BorderStyle}">
                <HeaderedContentControl
                    Content="{Binding Path=ContentTab}"
                    ContentTemplate="{StaticResource TabTemplate}"
                    Header="Doctors office"
                    Style="{StaticResource HeaderStyle}"
                    Margin="2"
                    />
            </Border>
        </Grid>
    </DockPanel>
</Window>
