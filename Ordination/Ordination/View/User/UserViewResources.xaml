<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm ="clr-namespace:Ordination.ViewModel.User"
                    xmlns:vW ="clr-namespace:Ordination.View.User"
                    >
    <DataTemplate DataType="{x:Type vm:AddPatientViewModel}">
        <vW:AddPatientView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AllPatientsViewModel}">
        <vW:AllPatientsView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AllAppointmentsViewModel}">
        <vW:AllAppointmentsView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:DoctorViewModel}">
        <vW:DoctorView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:UserChangePasswordViewModel}">
        <vW:UserChangePassword/>
    </DataTemplate>

   <DataTemplate DataType="{x:Type vm:PatientViewModel}">
        <vW:PatientView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AddAppointmentViewModel}">
        <vW:AddAppointmentView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AddDoctorViewModel}">
        <vW:AddNewDoctorView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:LogInViewModel}">
        <vW:LogIn/>
    </DataTemplate>
    <Style x:Key="ItemStyle" TargetType="{x:Type ListViewItem}">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Background" Value="AliceBlue"/>
    </Style>

    <Style TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="Background" Value="AliceBlue"/>
        <Setter Property="Foreground" Value="Blue"/>
    </Style>

    <Style TargetType="{x:Type ListView}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Blue"/>
    </Style>

    <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Margin" Value="5,2"/>
        <Setter Property="Background" Value="AliceBlue" />
        <Setter Property="BorderBrush" Value="LightBlue" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="0,3"/>
        <Setter Property="Background" Value="LightBlue"/>
        <Setter Property="BorderBrush" Value="WhiteSmoke"/>
        <Setter Property="Foreground" Value="Blue"/>
    </Style>

    <Style x:Key="HeaderStyle" TargetType="{x:Type HeaderedContentControl}">
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border
                        Background="AliceBlue"
                        BorderBrush="White"
                        BorderThickness="3"
                        CornerRadius="5"
                        Margin="3"
                        Padding="3"
                        SnapsToDevicePixels="True"
                        >
                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="Blue"
                            HorizontalAlignment="Center"
                            Text="{TemplateBinding Content}"
                            />
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type HeaderedContentControl}">
                    <DockPanel>
                        <ContentPresenter 
                            DockPanel.Dock="Top"
                            ContentSource="Header"
                            ContentTemplate="{TemplateBinding HeaderTemplate}"
                            />
                        <ContentPresenter
                            ContentSource="Content" 
                            ContentTemplate="{TemplateBinding ContentTemplate}" 
                            />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    
    
   
    <DataTemplate x:Key="ClosableTabTemplate">
        <DockPanel Width="150">
            <Button
                Command="{Binding Path=CloseCommand}"
                Content="X"
                Cursor="Hand"
                DockPanel.Dock="Right"
                Focusable="False"
                FontSize="12"
                FontWeight="Bold"
                Margin="0,1,0,0"
                Padding="0"
                VerticalAlignment="Bottom"
                Width="20" Height="20"
                Style="{StaticResource ButtonStyle}"
                />
            <ContentPresenter
                Content="{Binding Path=DisplayText}"
                VerticalAlignment="Center"
                />
        </DockPanel>
    </DataTemplate>
    <DataTemplate x:Key="TabTemplate">
        <TabControl
            Background="AliceBlue"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding}"
            ItemTemplate="{StaticResource ClosableTabTemplate}"
            Margin="3"
            />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ValidationError}">
        <TextBlock
             FontStyle="Italic"
             Foreground="Red"
             HorizontalAlignment="Right"
             Margin="0,1"
             Text="{Binding Path=ErrorContent}"/>
    </DataTemplate>
</ResourceDictionary>
   